   <form action="/createClass/<%= userId %>" method="post" class="form" id="createClassForm">
    
    <label for="username">Username</label>
    <input type="text" id="username" name="username" class="input1" value="<%= user.username %>" readonly required>
    <label for="college">College Name</label>
    <select id="college" name="college" class="input1" required>
        <option value="LNCT University - [LNCTU], Bhopal">LNCT University - [LNCTU], Bhopal</option>
        <option value="Sagar Institute of Research and Technology - [SIRT], Bhopal">Sagar Institute of Research and Technology - [SIRT], Bhopal</option>
        <option value="Kamla Nehru Mahavidyalaya, Bhopal">Kamla Nehru Mahavidyalaya, Bhopal</option>
        <option value="Rajeev Gandhi College, Bhopal">Rajeev Gandhi College, Bhopal</option>
        <option value="Career College of Law, Bhopal">Career College of Law, Bhopal</option>
        <option value="Millennium College of Education - [MCE], Bhopal">Millennium College of Education - [MCE], Bhopal</option>
        <option value="RKDF University, Bhopal">RKDF University, Bhopal</option>
        <option value="IES College of Education, Bhopal">IES College of Education, Bhopal</option>
        <option value="SAGE University, Bhopal">SAGE University, Bhopal</option>
        <option value="Lakshmi Narain College of Technology - [LNCT], Bhopal">Lakshmi Narain College of Technology - [LNCT], Bhopal</option>
        <option value="Technocrats Institute of Technology - [TIT] (Excellence), Bhopal">Technocrats Institute of Technology - [TIT] (Excellence), Bhopal</option>
        <option value="Trinity Institute of Technology and Research, Bhopal">Trinity Institute of Technology and Research, Bhopal</option>
        <option value="Bhabha University - [BU], Bhopal">Bhabha University - [BU], Bhopal</option>
        <option value="Patel College of Science and Technology - [PCST], Bhopal">Patel College of Science and Technology - [PCST], Bhopal</option>
        <option value="Bhopal Institute of Technology - [BIT], Bhopal">Bhopal Institute of Technology - [BIT], Bhopal</option>
 </select>

    <label for="graduation">Graduation</label>
    <select id="graduation" name="graduation" class="input1" required>
      <option value="bachelor">Bachelor's Degree</option>
      <option value="master">Master's Degree</option>
      <option value="phd">Ph.D.</option>
    </select>

    <label for="courseName">Course Name</label>
    <select id="courseName" name="courseName" class="input1" required>
      <option value="Master AI and Land Your Dream Job">Master AI and Land Your Dream Job</option>
      <option value="Web 3 Development">Web 3 Development</option>
      <option value="Artificial Intelligence (AI) and (ML)">Artificial Intelligence (AI) and (ML)</option>
     
    </select>
    
    <label for="time">Course Date and Time</label>
    <input type="datetime-local" class="input1" id="time" name="time" required>
    <input type="hidden" name="userId" value="<%= userId %>"><br>
    <button type="submit" class="button1">Submit</button>
    <div id="message"></div>
  </form>
 

<script>
  document.getElementById('createClassForm').addEventListener('submit', async (event) => {
    event.preventDefault();
    const form = event.target;
    const formData = new FormData(form);
    const messageDiv = document.getElementById('message');

    try {
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData
      });
      
      if (response.ok) {
        messageDiv.textContent = 'Course created successfully!';
        messageDiv.style.color = 'white'; // Style for success message
      } else {
        messageDiv.textContent = 'Failed to create course. Please try again later.';
        messageDiv.style.color = 'red'; // Style for error message
      }
    } catch (error) {
      console.error('Error:', error);
      messageDiv.textContent = 'Internal Server Error';
      messageDiv.style.color = 'red'; // Style for error message
    }
  });
</script>
