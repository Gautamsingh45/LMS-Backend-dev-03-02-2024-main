  <% 
  // Group courses by courseName
  const groupedCourses = {};
  courses.forEach(student => {
    if (!groupedCourses[student.courseName]) {
      groupedCourses[student.courseName] = [];
    }
    groupedCourses[student.courseName].push(student);
  });

  // Iterate over grouped courses
  Object.keys(groupedCourses).forEach(courseName => {
    const students = groupedCourses[courseName];
%>
    <form method="post" action="/submit-attendance/<%= userId %>" class="form2">
      <h2><%= courseName %></h2>
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Attendance</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(student => { %>
            <tr>
              <td><%= student.username %></td>
              <td><%= student.email %></td>
              <td><%= student.phone %></td>
              <td>
                <input type="hidden" name="studentId" value="<%= student._id %>">
                <input type="hidden" name="username" value="<%= student.username %>">
                <input type="hidden" name="email" value="<%= student.email %>">
                <input type="hidden" name="phone" value="<%= student.phone %>">
                <select name="status">
                  <option value="present">Present</option>
                  <option value="absent">Absent</option>
                </select>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <button class="submit-btn" type="submit" name="course" value="<%= courseName %>">
        Submit
      </button>
    </form>
<% }); %>


