 .course-card-container {
   display: flex;
   flex-wrap: wrap;
   justify-content: space-around;
 }

 .course-card {
   background-color: #fff;
   box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
   margin: 10px;
   padding: 20px;
   border-radius: 8px;
   width: 300px;
 }

 

 .datetime {
   
   font-family: Arial, Helvetica, sans-serif;
 }

 .button {
   text-align: center;
   margin-top: 10px;
 }

 .button a {
   display: inline-block;
   padding: 8px 16px;
   background-color: #9f52c5;
   color: #fff;
   text-decoration: none;
   border-radius: 4px;
 }

 .button a:hover {
   background-color: #0056b3;
 }
 .course-card .font{
   font-family: Arial, Helvetica, sans-serif;
 }
</style>

</head>
<body>

<header class="header">
   
   <section class="flex">

      <a href="#" class="logo">
         <img class="large-logo" src="/images/redlogo.png">
         <img class="small-logo" src="/images/block_logo.png" alt="Small Logo">
      </a>

      <form action="#" method="post" class="search-form">
         <input type="text" name="search_box" required placeholder="search courses..." maxlength="100">
         <button type="submit" class="fas fa-search"></button>
      </form>

      <div class="icons">
         <div id="menu-btn" class="fas fa-bars"></div>
         <div id="search-btn" class="fas fa-search"></div>
         <div id="user-btn" class="fas fa-user"></div>
         <div id="toggle-btn" class="fas fa-sun"></div>
      </div>

      <div class="profile">
         <img src="/images/pic-1.jpg" class="image" alt="">
         <h3 class="name"><%= user.username %></h3>
         <p><%= user.role %></p>
         <p class="role">Student</p>
         <a href="/profile/<%= userId %>" class="btn">view profile</a>
         <div class="flex-btn">
            <a href="/logout" class="option-btn">logout</a>
            <a href="/update/<%= userId %>" class="option-btn">Update</a>
         </div>
      </div>

   </section>

</header>   

<div class="side-bar">

   <div id="close-btn">
      <i class="fas fa-times"></i>
   </div>

   <div class="profile">
