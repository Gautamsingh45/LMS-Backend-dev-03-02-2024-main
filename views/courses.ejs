      <a href="/courses/<%= userId %>"><i class="fas fa-chalkboard-user"></i><span>Online Class</span></a>
      <a href="/my-courses/<%= userId %>"><i class="fas fa-graduation-cap"></i><span>My Courses</span></a>
      <a href="/about/<%= userId %>"><i class="fas fa-tasks"></i><span>Assignment</span></a>
      <a href="/attendance/<%= userId %>"><i class="fa-solid fa-clipboard-user"></i><span>Attendance</span></a>
      <a href="/contact/<%= userId %>"><i class="fas fa-headset"></i><span>Contact Us</span></a>
   </nav>

</div>

<section class="courses">

   <h1 class="heading">Schedule Online Classes</h1>

   <div class="course-card-container">
